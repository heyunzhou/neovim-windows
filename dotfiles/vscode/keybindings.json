// Place your key bindings in this file to override the defaultsauto[]
[
  {
    "key": "alt+f",
    "command": "workbench.action.findInFiles"
  },
  {
    "key": "alt+r",
    "command": "workbench.action.replaceInFiles"
  },
  {
    "key": "ctrl+shift+w",
    "command": "-workbench.action.closeWindow"
  },
  // 文件资源管理器快捷键
  {
    "key": "space e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "neovim.mode !== insert && !filesExplorerFocus && editorTextFocus"
  },
  {
    "key": "space e",
    "command": "workbench.action.closeSidebar",
    "when": "neovim.mode !== insert && filesExplorerFocus"
  },
  {
    "key": "ctrl+n",
    "command": "explorer.newFile",
    "when": "explorerViewletFocus"
  },
  {
    "key": "ctrl+shift+n",
    "command": "explorer.newFolder",
    "when": "explorerViewletFocus"
  },
  // 代码提示时,按esc不退出normal模式
  {
    "key": "escape",
    "command": "vscode-neovim.escape",
    "when": "editorTextFocus && neovim.init && neovim.mode != 'normal' && editorLangId not in 'neovim.editorLangIdExclusions'&& !parameterHintsVisible && !suggestWidgetVisible && !inlineSuggestionVisible"
  },
  {
    "key": "escape",
    "command": "-vscode-neovim.escape",
    "when": "editorTextFocus && neovim.init && neovim.mode != 'normal' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "ctrl+f",
    "command": "-vscode-neovim.ctrl-f",
    "when": "editorTextFocus && neovim.ctrlKeysNormal.f && neovim.init && neovim.mode != 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  },
  {
    "key": "ctrl+f",
    "command": "-vscode-neovim.send",
    "when": "editorTextFocus && neovim.ctrlKeysInsert.f && neovim.init && neovim.mode == 'insert' && editorLangId not in 'neovim.editorLangIdExclusions'"
  }
]
